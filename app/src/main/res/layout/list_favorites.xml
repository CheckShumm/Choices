<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/favoriteListItem"
        android:background="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/lv_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/lv_title"
            android:layout_toRightOf="@+id/lv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="title"/>
        <com.willy.ratingbar.ScaleRatingBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lv_simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="8dp"
            app:srb_numStars="5"
            app:srb_minimumStars="1"
            app:srb_rating="2"
            app:srb_starWidth="20dp"
            app:srb_starHeight="20dp"
            app:srb_starPadding="3dp"
            android:layout_below="@+id/lv_title"
            android:layout_toRightOf="@id/lv_image"
            app:srb_stepSize="0.1"
            app:srb_isIndicator="false"
            app:srb_clearRatingEnabled="true"
            app:srb_drawableEmpty="@drawable/star_empty"
            app:srb_drawableFilled="@drawable/star_filled">
        </com.willy.ratingbar.ScaleRatingBar>
        <Button
            android:id="@+id/lv_button"
            android:layout_margin="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/dislike" />
    </RelativeLayout>

</LinearLayout>