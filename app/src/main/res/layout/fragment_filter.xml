<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.filter.FilterFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorWhite">
                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/iv_coffee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="cafe"
                    android:src="@drawable/coffee_cup"
                    />
                <TextView
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_coffee"
                    android:layout_centerInParent="true"
                    android:text="cafe"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorWhite">
                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/iv_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="food"
                    android:src="@drawable/dish"
                    />
                <TextView
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_food"
                    android:layout_centerInParent="true"
                    android:text="Food"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorWhite">
                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/iv_beer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="bars"
                    android:src="@drawable/pint"
                    />
                <TextView
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_beer"
                    android:layout_centerInParent="true"
                    android:text="Bar"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:background="@color/colorWhite">
                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/iv_clubs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="clubs"
                    android:src="@drawable/disco_ball"
                    />
                <TextView
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_clubs"
                    android:layout_centerInParent="true"
                    android:text="Clubs"/>
            </RelativeLayout>

        </LinearLayout>


</FrameLayout>